{
  // === File Encoding & Line Endings ===
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",

  // === Editor General Settings ===
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 100, 120],
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.clippy": "explicit",
    "source.organizeImports": "explicit"
  },

  // === Language-Specific Settings ===
  "[rust]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.semanticHighlighting.enabled": true
  },
  "[toml]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "rust-analyzer.enable": false,
    "editor.semanticHighlighting.enabled": false,
    "editor.suggest.showWords": false,
    "editor.wordBasedSuggestions": "off"
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[powershell]": {
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.tabSize": 2
  },

  // === Rust-Analyzer Settings ===
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.check.allTargets": true,
  "rust-analyzer.diagnostics.enable": true,
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.chainingHints.enable": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.methodReferences": true,
  "rust-analyzer.lens.references": true,
  "rust-analyzer.lens.run": true,
  "rust-analyzer.lens.debug": true,
  "rust-analyzer.runnables.command": "cargo",
  "rust-analyzer.files.excludeDirs": [],
  "rust-analyzer.files.excludeFiles": ["**/*.md"],
  "rust-analyzer.diagnostics.disabled": [
    "unresolved-import",
    "unresolved-macro-call",
    "undefined",
    "unknown-tool",
    "unknown-toolset"
  ],
  "rust-analyzer.workspace.symbol.search.scope": "workspace_and_dependencies",
  "rust-analyzer.workspace.symbol.search.kind": "only_types",
  "rust-analyzer.completion.callable.snippets": "none",
  "rust-analyzer.lens.forceCustomCommands": false,

  // === Search & Explorer ===
  "search.exclude": {
    "**/target": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/book": true,
    "**/docs": true
  },
  "files.exclude": {
    "**/target": true,
    "**/.git": true,
    "**/Cargo.lock": false
  },
  "files.watcherExclude": {
    "**/target/**": true
  },

  // === Terminal Settings ===
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,

  // === Git Settings ===
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // === File Organization & Test Management ===
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,
  "explorer.fileNesting.patterns": {
    "*.rs": "${basename}_tests.rs,${basename}_extensions.rs,${basename}_collision.rs,${basename}_intersection.rs,${basename}_metrics.rs,${basename}_transform.rs,${basename}_sampling.rs,${basename}_containment.rs,${basename}_additional_tests.rs,${basename}_builder_tests.rs",
    "bbox_2d.rs": "bbox_2d_tests.rs,bbox_2d_extensions.rs,bbox_2d_transform.rs,bbox_2d_transform_safe.rs,bbox_2d_builder_tests.rs",
    "bbox_3d.rs": "bbox_3d_tests.rs,bbox_3d_extensions.rs,bbox_3d_transform.rs,bbox_3d_transform_safe.rs,bbox_3d_builder_tests.rs",
    "direction_2d.rs": "direction_2d_extensions.rs,direction_2d_extensions_tests.rs,direction_2d_transform_safe.rs",
    "direction_3d.rs": "direction_3d_extensions.rs,direction_3d_extensions_tests.rs,direction_3d_transform_safe.rs",
    "point_2d.rs": "point_2d_tests.rs,point_2d_extensions.rs,point_2d_transform.rs,point_2d_transform_safe.rs,point_2d_transform_safe_tests.rs",
    "point_3d.rs": "point_3d_tests.rs,point_3d_extensions.rs,point_3d_transform.rs,point_3d_transform_safe.rs,point_3d_transform_safe_tests.rs",
    "vector_2d.rs": "vector_2d_tests.rs,vector_2d_extensions.rs,vector_2d_transform.rs,vector_2d_transform_safe.rs,vector_2d_transform_safe_tests.rs",
    "vector_3d.rs": "vector_3d_tests.rs,vector_3d_extensions.rs,vector_3d_transform.rs,vector_3d_transform_safe.rs,vector_3d_transform_safe_tests.rs",
    "ray_2d.rs": "ray_2d_tests.rs,ray_2d_extensions.rs,ray_2d_transform.rs,ray_2d_transform_safe.rs",
    "ray_3d.rs": "ray_3d_tests.rs,ray_3d_extensions.rs,ray_3d_transform.rs,ray_3d_transform_safe.rs",
    "arc_2d.rs": "arc_2d_tests.rs,arc_2d_collision.rs,arc_2d_transform.rs,arc_2d_transform_safe.rs",
    "arc_3d.rs": "arc_3d_tests.rs,arc_3d_transform.rs,arc_3d_transform_safe.rs",
    "circle_2d.rs": "circle_2d_tests.rs,circle_2d_metrics.rs,circle_2d_transform.rs,circle_2d_transform_safe.rs",
    "circle_3d.rs": "circle_3d_tests.rs,circle_3d_transform_safe.rs",
    "ellipse_2d.rs": "ellipse_2d_tests.rs,ellipse_2d_extensions.rs,ellipse_2d_transform.rs,ellipse_2d_transform_safe.rs",
    "ellipse_3d.rs": "ellipse_3d_tests.rs,ellipse_3d_extensions.rs,ellipse_3d_transform.rs,ellipse_3d_transform_safe.rs,ellipse_3d_transform_safe_tests.rs",
    "ellipse_arc_2d.rs": "ellipse_arc_2d_tests.rs,ellipse_arc_2d_extensions.rs,ellipse_arc_2d_transform.rs,ellipse_arc_2d_transform_safe.rs",
    "infinite_line_2d.rs": "infinite_line_2d_tests.rs,infinite_line_2d_extensions.rs,infinite_line_2d_transform.rs,infinite_line_2d_transform_safe.rs",
    "infinite_line_3d.rs": "infinite_line_3d_tests.rs,infinite_line_3d_extensions.rs,infinite_line_3d_transform.rs,infinite_line_3d_transform_safe.rs",
    "line_segment_2d.rs": "line_segment_2d_tests.rs,line_segment_2d_extensions.rs,line_segment_2d_transform.rs,line_segment_2d_transform_safe.rs",
    "line_segment_3d.rs": "line_segment_3d_tests.rs,line_segment_3d_extensions.rs,line_segment_3d_transform.rs,line_segment_3d_transform_safe.rs",
    "transform.rs": "transform_error.rs",
    "collision.rs": "collision_error.rs",
    "intersection.rs": "intersection_error.rs",
    "Cargo.toml": "Cargo.lock",
    "README.md": "*.md,MIGRATION_*.md,*-analysis.md,*-plan.md,*-roadmap.md,*-report.md,UNITS.md,LICENSE",
    "book.toml": "book,docs"
  },
  "explorer.sortOrder": "type",
  "explorer.compactFolders": false,
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true,

  // === Workspace-Specific Settings ===
  "workbench.colorTheme": "PowerShell ISE",
  "workbench.iconTheme": "vs-seti",
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",
  "breadcrumbs.enabled": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // === Language Server Settings ===
  "rust-analyzer.server.extraEnv": {
    "RUST_ANALYZER_DISABLE_MARKDOWN": "1"
  },
  "rust-analyzer.cargo.features": [],
  "rust-analyzer.linkedProjects": [],

  // === File Associations ===
  "files.associations": {
    "*.md": "markdown",
    "copilot-instructions.md": "markdown",
    "*_transform_safe.rs": "rust",
    "*_transform_safe_tests.rs": "rust",
    "*_extensions.rs": "rust",
    "*_tests.rs": "rust"
  },

  // === Performance Settings ===
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "extensions.ignoreRecommendations": false,

  // === Testing & Development ===
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.loadOutDirsFromCheck": true,
  "rust-analyzer.experimental.procAttrMacros": true,



  // === Documentation ===
  "rust-analyzer.hover.documentation.enable": true,
  "rust-analyzer.hover.actions.enable": true,
  "rust-analyzer.hover.actions.implementations.enable": true,
  "rust-analyzer.hover.actions.references.enable": true,

  // === Debugging ===
  "debug.allowBreakpointsEverywhere": true,
  "debug.showInStatusBar": "onFirstSessionStart"
}
